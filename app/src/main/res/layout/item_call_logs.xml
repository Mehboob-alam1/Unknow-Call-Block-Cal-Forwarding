<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical"

        >

        <me.jagar.chatvoiceplayerlibrary.VoicePlayerView
            android:id="@+id/voicePlayerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:enableVisualizer="false"
            app:visualizationPlayedColor="#ff7700"
            app:visualizationNotPlayedColor="#727171"
            app:playPauseBackgroundColor="#ff7700"
            app:timingBackgroundColor="#6AFF7700"
            app:seekBarProgressColor="#000"
            app:showShareButton="true"
            app:shareCornerRadius="100"
            app:playPauseCornerRadius="100"
            app:showTiming="true"
            app:viewCornerRadius="100"
            app:viewBackground="#C6C4CF"
            app:progressTimeColor="#000"
            app:seekBarThumbColor="#FFC107"
            app:shareBackgroundColor="#ff7700"
            app:playProgressbarColor="#ff7700"
            app:shareText="SHARE ME"/>
        
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="8dp"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:textStyle="bold"
                   android:padding="8dp"
                   android:layout_height="wrap_content"
                   android:text="Duration"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:padding="8dp"
                   android:id="@+id/txtDuration"
                   android:layout_height="wrap_content"
                   android:text="Duration"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="8dp"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:textStyle="bold"
                   android:padding="8dp"
                   android:layout_height="wrap_content"
                   android:text="Incoming"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:padding="8dp"
                   android:id="@+id/txtIncoming"
                   android:layout_height="wrap_content"
                   android:text="+923171981460"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="8dp"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:textStyle="bold"
                   android:padding="8dp"
                   android:layout_height="wrap_content"
                   android:text="Time"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:padding="8dp"
                   android:id="@+id/txtTime"
                   android:layout_height="wrap_content"
                   android:text="24/Aug/2024"/>
           </LinearLayout>



       </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:text="Summary"/>
        <TextView
            android:layout_width="wrap_content"
           android:id="@+id/txtSummary"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:text="Time"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>